{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pulsar",
  "patterns": [
    { "include": "#comments"    },
    { "include": "#directives"  },
    { "include": "#functions"   },
    { "include": "#keywords"    },
    { "include": "#identifiers" },
    { "include": "#numbers"     },
    { "include": "#strings"     },
    { "include": "#characters"  },
    { "include": "#lists"       },
    { "include": "#symbols"     }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "//[^\\n]*"
        },
        {
          "name": "comment.line",
          "match": ";"
        }
      ]
    },
    "symbols": {
      "name": "keyword.operator",
      "match": "[<>!]?=|[\\->]>|<[<&]|[*:!.+\\-/%<>&|~^]"
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive",
          "match": "#(?:include)(?![_a-zA-Z0-9<=>?+\\-*/!])"
        },
        {
          "name": "invalid.keyword.control.directive",
          "match": "#[_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*"
        }
      ]
    },
    "functions": {
      "name": "entity",
      "patterns": [
        {
          "begin": "\\(\\s*(\\*)\\s*([_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*)?",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" }
          ],
          "beginCaptures": {
            "1": { "name": "keyword.operator.native" },
            "2": { "name": "entity.name.function.native" }
          }
        },
        {
          "name": "keyword.control",
          "begin": "\\(\\s*!",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" },
            { "include": "#numbers" }
          ]
        },
        {
          "begin": "\\([\\s]*([_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*)?",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" }
          ],
          "beginCaptures": {
            "1": { "name": "entity.name.function" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "(?<![_a-zA-Z])(if|else|end|global|const|do|while|break|continue)(?![_a-zA-Z0-9<=>?+\\-*/!])",
          "captures": {
            "1": { "name": "keyword.control" }
          }
        }
      ]
    },
    "identifiers": {
      "match": "[_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*"
    },
    "numbers": {
      "name": "constant.numeric",
      "patterns": [
        {
          "name": "constant.numeric.double",
          "match": "[+\\-]?[0-9]+\\.[0-9]+\\b"
        },
        {
          "patterns": [
            { "name": "constant.numeric.integer", "match": "0x[0-9a-fA-F]+\\b" },
            { "name": "constant.numeric.integer", "match": "0o[0-7]+\\b" },
            { "name": "constant.numeric.integer", "match": "0b[01]+\\b" },
            { "name": "constant.numeric.integer", "match": "[+\\-]?[0-9]+\\b" }
          ]
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "(\\\\x[0-9a-fA-F]{1,2};?|\\\\[ -~])|[^\"\\\\]*",
          "captures": {
            "1": { "name": "constant.character.escape" }
          }
        }
      ],
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end" }
      }
    },
    "characters": {
      "name": "string.quoted.single",
      "match": "(')(?:([ -&\\(-\\[\\]-~])|(\\\\x[0-9a-fA-F]{1,2};?)|(\\\\[ -~]))(')",
      "captures": {
        "1": { "name": "punctuation.definition.character.begin" },
        "3": { "name": "constant.character.escape" },
        "4": { "name": "constant.character.escape" },
        "5": { "name": "punctuation.definition.character.end" }
      }
    },
    "lists": {
      "begin": "\\[",
      "end": "]",
      "patterns": [
        {
          "name": "punctuation.separator.delimiter.comma",
          "match": ","
        },
        { "include": "#comments"    },
        { "include": "#functions"   },
        { "include": "#identifiers" },
        { "include": "#numbers"     },
        { "include": "#strings"     },
        { "include": "#characters"  },
        { "include": "#lists"       },
        { "include": "#symbols"     }
      ],
      "beginCaptures": {
        "0": { "name": "punctuation.definition.array.list.begin" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.array.list.end" }
      }
    }
  },
  "scopeName": "source.pulsar"
}