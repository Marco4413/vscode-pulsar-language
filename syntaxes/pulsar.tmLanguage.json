{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pulsar",
  "patterns": [
    { "include": "#comments"    },
    { "include": "#functions"   },
    { "include": "#keywords"    },
    { "include": "#identifiers" },
    { "include": "#numbers"     },
    { "include": "#strings"     },
    { "include": "#symbols"     }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "//[^\\n]*"
        },
        {
          "name": "comment.line",
          "match": ";"
        }
      ]
    },
    "symbols": {
      "name": "keyword.operator",
      "match": "[<>!]?=|->|<&|[*:!.+\\-/%<>]"
    },
    "functions": {
      "name": "entity",
      "patterns": [
        {
          "begin": "\\*\\s*\\(\\s*(\\*)?\\s*(?:[_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*)?",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" }
          ],
          "beginCaptures": {
            "0": { "name": "entity.name.function.definition" },
            "1": { "name": "keyword.operator.native" }
          },
          "endCaptures": {
            "0": { "name": "entity.name.function.definition" }
          }
        },
        {
          "name": "entity.name.function.native",
          "begin": "\\(\\s*(\\*)",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" }
          ],
          "beginCaptures": {
            "1": { "name": "keyword.operator.native" }
          }
        },
        {
          "name": "keyword.control",
          "begin": "\\(\\s*!",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" },
            { "include": "#numbers" }
          ],
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          }
        },
        {
          "name": "entity.name.function",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            { "include": "#identifiers" }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "[^_a-zA-Z]?(if|else|end)[^_a-zA-Z0-9<=>?+\\-*/!]?",
          "captures": {
            "1": { "name": "keyword.control" }
          }
        }
      ]
    },
    "identifiers": {
      "match": "[_a-zA-Z][_a-zA-Z0-9<=>?+\\-*/!]*"
    },
    "numbers": {
      "name": "constant.numeric",
      "patterns": [
        {
          "name": "constant.numeric.double",
          "match": "\\-?[0-9]+\\.[0-9]+"
        },
        {
          "name": "constant.numeric.integer",
          "match": "\\-?[0-9]+"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "(\\\\[ -~])|[^\"\\\\]*",
          "captures": {
            "1": { "name": "constant.character.escape" }
          }
        }
      ],
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end" }
      }
    }
  },
  "scopeName": "source.pulsar"
}